<launch>

  <!-- Launch Husky Highlevel Controller Node -->
  <node pkg="husky_highlevel_controller" type="husky_highlevel_controller" name="husky_highlevel_controller" output="screen" >
	<rosparam command="load" file="$(find husky_highlevel_controller)/config/config.yaml" />
</node>

  <!-- We resume the logic in empty_world.launch, changing only the name of the world to be launched -->
  <include file="$(find husky_gazebo)/launch/husky_empty_world.launch">
    <arg name="world_name" value="$(find husky_highlevel_controller)/worlds/singlePillar.world"/> <!-- Note: the world_name is with respect to GAZEBO_RESOURCE_PATH environmental variable -->
	<arg name="laser_enabled" value="true"/>
  </include>

  <node pkg="rviz" type="rviz" name="rviz"  args="-d $(find husky_highlevel_controller)/rviz_cfg/rviz_cfg.rviz" />
</launch>
